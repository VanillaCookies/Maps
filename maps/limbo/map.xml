<?xml version="1.0"?>
<map proto="1.4.3">
<name>Limbo</name>
<version>1.0.1</version>
<objective>Hold all 3 points!</objective>
<authors>
    <author uuid="5e1c0b5d-cfdd-4e10-95cd-c53f8ee92150"/> <!-- Pandaboy999 -->
</authors>
<contributors>
    <contributor uuid="dad8b95c-cf6a-44df-982e-8c8dd70201e0" contribution="XML Fixing and Initial Testing"/> <!-- ElectroidFilms -->
    <contributor uuid="2cef6d05-ec9a-44b3-bedc-53359c68ae65" contribution="XML proto update"/>
</contributors>
<teams>
    <team id="orange" color="gold" max="5">Orange</team>
    <team id="cyan" color="dark aqua" max="5">Cyan</team>
</teams>
<kits>
    <kit id="spawn">
        <item slot="0" material="stone sword"/>
        <item slot="1" enchantment="arrow infinite:1" material="bow"/>
        <item slot="28" material="arrow"/>
        <item slot="2" amount="16" material="cooked beef"/>
        <potion duration="5" amplifier="4">heal</potion>
        <potion duration="5" amplifier="4">damage resistance</potion>
        <potion duration="oo" amplifier="1">night vision</potion>
        <leggings enchantment="protection projectile:1" unbreakable="true">iron leggings</leggings>
    </kit>
    <kit id="cyan-kit" parents="spawn">
        <helmet color="4C7F99" unbreakable="true">leather helmet</helmet>
        <chestplate color="4C7F99" unbreakable="true">leather chestplate</chestplate>
        <boots color="4C7F99" unbreakable="true">leather boots</boots>
    </kit>
    <kit id="orange-kit" parents="spawn">
        <helmet color="D87F33" unbreakable="true">leather helmet</helmet>
        <chestplate color="D87F33" unbreakable="true">leather chestplate</chestplate>
        <boots color="D87F33" unbreakable="true">leather boots</boots>
    </kit>
    <kit id="obs">
        <potion duration="oo" amplifier="1">night vision</potion>
    </kit>
</kits>
<filters>
	<team id="only-cyan">cyan</team>
	<team id="only-orange">orange</team>
</filters>
<regions>
    <rectangle id="everything" min="-oo,-oo" max="oo,oo"/>
    <cylinder id="cyan-portal" base="-8.5,6,0.5" radius="3" height="3"/>
    <cylinder id="orange-portal" base="9,6,0" radius="3" height="3"/>
    <apply enter="only-cyan" message="You may not enter the enemy team's portal!" region="cyan-portal"/>
    <apply enter="only-orange" message="You may not enter the enemy team's portal!" region="orange-portal"/>
    <apply block="never" region="everything"/>
</regions>
<spawns>
    <spawn team="cyan" kit="cyan-kit">
        <region yaw="90">
            <cuboid min="51,7,2" max="47,7,-1"/>
        </region>
    </spawn>
    <spawn team="orange" kit="orange-kit">
        <region  yaw="-90">
            <cuboid min="-50,7,-1" max="-46,7,2"/>
        </region>
    </spawn>
    <default kit="obs">
        <region yaw="180">
            <cuboid min="-0,19,-0" max="1,19,1"/>
        </region>
    </default>
</spawns>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>arrow</item>
    <item>golden apple</item>
    <item>cooked beef</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>iron leggings</item>
    <item>leather boots</item>
</itemremove>
<killreward>
    <item amount="1">golden apple</item>
</killreward>
<timelock>on</timelock>
<portals>
    <portal x="@9.5" y="@2" z="@0.5" yaw="@90">
        <region>
            <cylinder name="cyan-portal" base="-8.5,6,0.5" radius="2" height="3"/>
        </region>
    </portal>
    <portal x="@-8.5" y="@2" z="@0.5" yaw="@-90">
        <region>
            <cylinder name="orange-portal" base="9,6,0" radius="2" height="3"/>
        </region>
    </portal>
    <portal x="@0.5" y="@7" z="@0.5">
        <region>
            <cylinder name="double-portal-a" base="0.5,2,-8.5" radius="2" height="3"/>
        </region>
    </portal>
    <portal x="@0.5" y="@7" z="@0.5">
        <region>
            <cylinder name="double-portal-b" base="0,2,9" radius="2" height="3"/>
        </region>
    </portal>
</portals>
<control-points incremental="true" neutral-state="true" show-progress="true" scaled-time="true">
    <control-point name="Point A" capture-time="10s" points="1">
        <capture-region>
            <cuboid min="3,8,14" max="-2,12,9"/>
        </capture-region>
        <progress-display-region>
            <cuboid min="3,8,14" max="-2,12,9"/>
        </progress-display-region>
        <owner-display-region>
            <cuboid min="1,1,1" max="1,1,1"/>
        </owner-display-region>
    </control-point>
    <control-point name="Center" capture-time="15s" points="1">
        <capture-region>
            <cuboid min="-3,2,4" max="4,5,-3"/>
        </capture-region>
        <progress-display-region>
            <cuboid min="-3,2,4" max="4,5,-3"/>
        </progress-display-region>
        <owner-display-region>
            <cuboid min="0,0,0" max="0,0,0"/>
        </owner-display-region>
    </control-point>
    <control-point name="Point B" capture-time="10s" points="1">
        <capture-region>
            <cuboid min="-2,8,-13" max="3,12,-8"/>
        </capture-region>
        <progress-display-region>
            <cuboid min="-2,8,-13" max="3,12,-8"/>
        </progress-display-region>
        <owner-display-region>
            <cuboid min="3,3,3" max="3,3,3"/>
        </owner-display-region>
    </control-point>
</control-points>
<score>
    <limit>750</limit>
    <king/>
</score>
</map>
