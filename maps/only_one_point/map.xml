<?xml version="1.0"?>
<map proto="1.4.3">
<name>Only One Point : Blitz</name>
<version>1.0.3</version>
<objective>Capture the only one Control Point</objective>
<authors>
    <author uuid="0d6cbe3e-8fb2-4eb9-a751-0d2e76556c6a"/>
</authors>
<teams>
   <team id="red" color="dark red" max="5" min="3">Red</team>
   <team id="blue" color="blue" max="5" min="3">Blue</team>
</teams>
<kits>
    <kit id="spawn" force="true">
        <item slot="0" material="bow"/>
        <item slot="1" amount="3" material="arrow"/>
    </kit>
    <kit id="red-kit" parents="spawn">
        <helmet color="cd0000" material="leather helmet"/>
    </kit>
    <kit id="blue-kit" parents="spawn">
        <helmet color="0066cc" material="leather helmet"/>
    </kit>
</kits>
<regions>
    <apply block="never" region="everywhere"/>
</regions>
<spawns>
    <spawn team="red" kit="red-kit" yaw="180">
        <block>0.5,16.5,33.5</block>
    </spawn>
    <spawn team="blue" kit="blue-kit" yaw="0">
        <block>0.5,16.5,-32.5</block>
    </spawn>
    <default yaw="90">
        <block>0.5,22.3,0.5</block>
    </default>
</spawns>
<control-points incremental="true" neutral-state="true" show-progress="true" scaled-time="true">
    <control-point name="Victory" capture-time="8s" points="1">
        <capture-region>
	        <cylinder base="0.5,3,0.5" radius="4.5" height="5"/>
	    </capture-region>
	    <progress-display-region>
	        <cylinder base="0.5,3,0.5" radius="6" height="5"/>
	    </progress-display-region>
    </control-point>
</control-points>
<score>
    <limit>10</limit>
    <king/>
</score>
<blitz>
    <lives>1</lives>
</blitz>
<destroyables materials="stained glass" completion="0%" required="false" show="false" mode-changes="true">
    <destroyable name="monu" owner="red">
       <region>
           <cuboid min="-3,17,29" max="4,7,37"/>
       </region>
    </destroyable>
    <destroyable name="monu" owner="blue">
       <region>
           <cuboid min="4,18,-28" max="-3,7,-36"/>
       </region>
    </destroyable>
</destroyables>
<modes>
    <mode after="5s" material="air" show-before="5"/>
</modes>
<broadcasts>
    <alert after="2s">`e`lShoot your opponent's and knock him down!</alert>
</broadcasts>
<time result="objectives">3m</time>
<itemremove>
    <item>arrow</item>
    <item>bow</item>
    <item>leather helmet</item>
</itemremove>
<timelock>on</timelock>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
